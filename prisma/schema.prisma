generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  password        String?
  name            String
  username        String    @unique
  bio             String?
  avatar          String?
  role            Role      @default(USER)
  isBanned        Boolean   @default(false)
  bannedUntil     DateTime?
  banReason       String?

  // Gamification
  xp              Int       @default(0)
  level           Int       @default(1)
  streak          Int       @default(0)
  lastActiveAt    DateTime?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // AuthJS
  accounts Account[]
  sessions Session[]

  // Relations
  posts           Post[]
  comments        Comment[]
  likes           Like[]
  bookmarks       Bookmark[]
  profile         Profile?
  reports         Report[]
  bannedBy        UserBan[]        @relation("BannedUsers")
  bansMade        UserBan[]        @relation("BansMadeByUser")
  achievements    UserAchievement[]
  notifications   Notification[]   @relation("UserNotifications")
  triggeredNotifications Notification[] @relation("NotificationActor")
  following       Follow[]         @relation("UserFollowing")
  followers       Follow[]         @relation("UserFollowers")

  @@map("users")
}

model Profile {
  id          String  @id @default(cuid())
  title       String? //Role the user works
  company     String?
  website     String?
  location    String?
  socialLinks Json? // Links to social media profiles
  userId      String  @unique
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("profiles")
}

model Post {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  content     String     @db.Text
  excerpt     String?
  coverImage  String?
  published   Boolean    @default(false)
  feature     Boolean    @default(false)
  status      PostStatus @default(DRAFT)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  publishedAt DateTime?

  // Relations
  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  categories PostCategory[]
  tags       PostTag[]
  comments   Comment[]
  likes      Like[]
  bookmarks  Bookmark[]
  reports    Report[]
  views      PostView[]
}

model Category {
  id          String  @id @default(cuid())
  name        String  @unique
  slug        String  @unique
  description String?
  color       String?

  // Relations
  posts PostCategory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categories")
}

model Tag {
  id   String @id @default(cuid())
  name String @unique
  slug String @unique

  // Relations
  posts PostTag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tags")
}

model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  parentId String?
  parent   Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies  Comment[] @relation("CommentReplies")
  likes    Like[]
  reports  Report[]

  @@map("comments")
}

model Like {
  id String @id @default(cuid())

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  postId String?
  post   Post?   @relation(fields: [postId], references: [id], onDelete: Cascade)

  commentId String?
  comment   Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, postId, commentId])
  @@map("likes")
}

// Many-to-Many
model PostCategory {
  postId     String
  post       Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([postId, categoryId])
  @@map("post_categories")
}

model PostTag {
  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  tagId  String
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
  @@map("post_tags")
}

model Log {
  id        String   @id @default(cuid())
  level     LogLevel
  message   String   @db.Text
  context   Json?
  source    String?
  createdAt DateTime @default(now())

  @@index([level])
  @@index([createdAt])
  @@map("logs")
}

model Report {
  id        String       @id @default(cuid())
  reason    String
  details   String?      @db.Text
  status    ReportStatus @default(PENDING)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  // Reporter
  reporterId String
  reporter   User   @relation(fields: [reporterId], references: [id], onDelete: Cascade)

  // Reported Content
  postId    String?
  post      Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)
  commentId String?
  comment   Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@map("reports")
}

model UserBan {
  id        String    @id @default(cuid())
  reason    String
  permanent Boolean   @default(false)
  expiresAt DateTime?
  createdAt DateTime  @default(now())

  // Banned User
  userId String
  user   User   @relation("BannedUsers", fields: [userId], references: [id], onDelete: Cascade)

  // Who banned
  bannedById String
  bannedBy   User   @relation("BansMadeByUser", fields: [bannedById], references: [id], onDelete: Cascade)

  @@map("user_bans")
}

model PostView {
  id        String   @id @default(cuid())
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([postId])
  @@map("post_views")
}

model Bookmark {
  id        String   @id @default(cuid())
  note      String?  @db.Text // Personal note about the bookmark
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
  @@map("bookmarks")
}

model Achievement {
  id          String   @id @default(cuid())
  key         String   @unique // Unique identifier (e.g., "first_post", "10_likes")
  name        String   // Display name
  description String
  icon        String   // Emoji or icon name
  category    AchievementCategory
  points      Int      @default(0) // XP reward
  rarity      AchievementRarity @default(COMMON)

  // Requirements (stored as JSON for flexibility)
  criteria    Json     // e.g., { "type": "post_count", "count": 10 }

  createdAt   DateTime @default(now())

  // Relations
  users       UserAchievement[]

  @@map("achievements")
}

model UserAchievement {
  id            String   @id @default(cuid())
  unlockedAt    DateTime @default(now())
  progress      Int      @default(0)
  notified      Boolean  @default(false) // Whether user was notified

  // Relations
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  achievementId String
  achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@index([userId])
  @@map("user_achievements")
}

enum AchievementCategory {
  CONTENT      // Creating posts, comments
  ENGAGEMENT   // Likes, shares, bookmarks
  SOCIAL       // Follows, interactions
  MILESTONE    // Time-based, special events
  SPECIAL      // Rare achievements
}

enum AchievementRarity {
  COMMON       // Easy to get
  UNCOMMON     // Requires some effort
  RARE         // Requires dedication
  EPIC         // Very hard to get
  LEGENDARY    // Extremely rare
}

enum Role {
  USER // Comum User
  WRITER // Write Posts
  EDITOR // Edit Posts to another users
  MODERATOR // Manage Comments
  ADMIN // Full Access
}

enum PostStatus {
  DRAFT // Rascunho
  PENDING_REVIEW // Aguardando revisão
  PUBLISHED // Publicado
  ARCHIVED // Arquivado
}

enum ReportStatus {
  PENDING // Aguardando análise
  REVIEWING // Em análise
  RESOLVED // Resolvido
  REJECTED // Rejeitado
}

enum LogLevel {
  DEBUG
  INFO
  WARN
  ERROR
}

enum NotificationType {
  COMMENT          // Someone commented on your post
  REPLY            // Someone replied to your comment
  LIKE_POST        // Someone liked your post
  LIKE_COMMENT     // Someone liked your comment
  ACHIEVEMENT      // You unlocked an achievement
  FOLLOW           // Someone followed you (future)
  MENTION          // Someone mentioned you (future)
  POST_APPROVED    // Your post was approved
  POST_REJECTED    // Your post was rejected
}

model Notification {
  id        String           @id @default(cuid())
  type      NotificationType
  title     String
  message   String           @db.Text
  read      Boolean          @default(false)
  actionUrl String?          // Where to navigate when clicked
  metadata  Json?            // Additional data (flexible)

  createdAt DateTime         @default(now())

  // User who receives the notification
  userId    String
  user      User             @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)

  // User who triggered the notification (optional)
  actorId   String?
  actor     User?            @relation("NotificationActor", fields: [actorId], references: [id], onDelete: SetNull)

  // Optional references to related entities
  postId    String?
  commentId String?

  @@index([userId])
  @@index([userId, read])
  @@index([createdAt])
  @@map("notifications")
}

model Newsletter {
  id           String   @id @default(cuid())
  email        String   @unique
  language     String   @default("pt") // pt ou en
  isActive     Boolean  @default(true)
  subscribedAt DateTime @default(now())
  unsubscribedAt DateTime?

  @@map("newsletters")
  @@index([email])
  @@index([isActive])
}

model Follow {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())

  // User who is following
  followerId  String
  follower    User     @relation("UserFollowing", fields: [followerId], references: [id], onDelete: Cascade)

  // User being followed
  followingId String
  following   User     @relation("UserFollowers", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("follows")
}
